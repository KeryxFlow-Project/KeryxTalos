# KeryxFlow Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Binance API
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Anthropic API (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# News APIs (optional)
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# Environment
KERYXFLOW_ENV=development

# Notifications (optional)
# Telegram: Create a bot via @BotFather, get chat ID via @userinfobot
KERYXFLOW_NOTIFY_TELEGRAM_ENABLED=false
KERYXFLOW_NOTIFY_TELEGRAM_TOKEN=your_telegram_bot_token_here
KERYXFLOW_NOTIFY_TELEGRAM_CHAT_ID=your_chat_id_here

# Discord: Create webhook in Server Settings > Integrations > Webhooks
KERYXFLOW_NOTIFY_DISCORD_ENABLED=false
KERYXFLOW_NOTIFY_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_here
